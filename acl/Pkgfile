# Description: Access Control List filesystem support
# URL:         http://savannah.nongnu.org/projects/acl
# Depends on:  attr

name=acl
version=2.3.1
release=1
source=https://download-mirror.savannah.gnu.org/releases/$name/$name-$version.tar.gz

build() {
	mkdir build; cd build

	../$name-$version/configure  \
		--prefix=/usr        \
		--bindir=/bin        \
		--disable-nls        \

	make V=1
	make DESTDIR=$PKG install

	# move libs from /usr/lib to /lib
	install -d $PKG/lib
	mv $PKG/usr/lib/libacl.so.* $PKG/lib
	ln -sf ../../lib/$(readlink $PKG/usr/lib/libacl.so) \
		$PKG/usr/lib/libacl.so

	# remove junk
	rm -r $PKG/usr/share/doc
}
