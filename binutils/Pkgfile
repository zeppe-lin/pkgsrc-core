# Description: Tools necessary to build programs
# URL:         https://www.gnu.org/software/binutils/
# Depends on:  flex zstd

name=binutils
version=2.44
release=1
source=https://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.xz

build() {
	mkdir build; cd build

	../$name-$version/configure \
		--prefix=/usr \
		--disable-jansson \
		--disable-nls \
		--disable-werror \
		--enable-64-bit-bfd \
		--enable-default-execstack=no \
		--enable-gold=yes \
		--enable-install-libiberty \
		--enable-ld=default \
		--enable-pgo-build=lto \
		--enable-plugins \
		--enable-shared \
		--with-pic \
		--with-system-zlib \

	# Disable texinfo dependency
	sed -i -e '/^MAKEINFO/s|=.*|= true|' Makefile

	make tooldir=/usr V=1
	make tooldir=/usr DESTDIR=$PKG install

	sed -i "s|-L$SRC[^ ]* ||g" \
		$PKG/usr/lib/libbfd.la \
		$PKG/usr/lib/libctf.la \
		$PKG/usr/lib/libctf-nobfd.la \
		$PKG/usr/lib/libopcodes.la \

	# Remove junk
	cd $PKG/usr/share; rm -r doc info
}
