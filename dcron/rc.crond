#!/bin/sh
#
# /etc/rc.d/crond: start/stop crond(8) daemon
#

SSD=/sbin/start-stop-daemon
PROG=/usr/sbin/crond
OPTS="-S -l info"

case $1 in
start)
	$SSD --start --exec $PROG -- $OPTS
	;;
stop)
	$SSD --stop --retry 10 --exec $PROG
	;;
restart)
	$0 stop
	$0 start
	;;
status)
	$SSD --status --verbose --exec $PROG
	;;
*)
	echo "Usage: $0 {start|stop|restart|status}"
	;;
esac

# End of file.
