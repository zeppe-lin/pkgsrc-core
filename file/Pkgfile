# Description: File type identification utility
# URL:         https://www.darwinsys.com/file/
# Depends on:  bzip2 zstd

name=file
version=5.46
_version=$(echo $version | tr . _)
release=1
#source=ftp://ftp.astron.com/pub/file/file-$version.tar.gz
source=file-$version.tar.gz::https://github.com/file/file/archive/refs/tags/FILE$_version.tar.gz

build() {
	mkdir build; cd build

	autoreconf -fi ../file-FILE$_version
	../file-FILE$_version/configure  \
		--prefix=/usr            \
		--enable-fsect-man5      \
		--enable-static          \
		--disable-libseccomp     \

	make V=1
	make DESTDIR=$PKG install

	# remove empty dir
	rmdir $PKG/usr/share/man/man4
}
