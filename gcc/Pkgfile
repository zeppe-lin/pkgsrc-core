# Description: GNU compiler collection, which includes the C and C++ compilers
# URL:         https://gcc.gnu.org/
# Depends on:  glibc-32 libmpc zstd

name=gcc
version=14.2.0
release=2
source="ftp://gcc.gnu.org/pub/gcc/releases/gcc-$version/gcc-$version.tar.xz
	gcc-4.7.3-multilib-dirs.patch
	gcc-configure-texinfo.patch
	gcc-nocheck-fixincludes.patch"

build() {
	patch -d gcc-$version -p1 -i $SRC/gcc-4.7.3-multilib-dirs.patch
	patch -d gcc-$version -p1 -i $SRC/gcc-configure-texinfo.patch
	patch -d gcc-$version -p1 -i $SRC/gcc-nocheck-fixincludes.patch

	# set the default directory name for 64-bit libraries to "lib"
	sed -e '/m64=/s/lib64/lib/' -i.orig gcc-$version/gcc/config/i386/t-linux64

	# -pipe flag fail tests
	export CFLAGS=$(echo $CFLAGS | sed 's/-pipe//')
	export CXXFLAGS=$(echo $CXXFLAGS | sed 's/-pipe//')

	mkdir build; cd build

	../gcc-$version/configure         \
		--prefix=/usr             \
		--libexecdir=/usr/lib     \
		--disable-nls             \
		--disable-fixincludes     \
		--enable-__cxa_atexit     \
		--enable-clocale=gnu      \
		--enable-default-pie      \
		--enable-default-ssp      \
		--enable-languages=c,c++  \
		--enable-lto              \
		--enable-multilib         \
		--enable-plugin           \
		--enable-shared           \
		--enable-threads=posix    \
		--with-system-zlib        \
		--with-x=no               \
		MAKEINFO=missing          \

	make bootstrap
	make -j1 DESTDIR=$PKG install

	mkdir -p $PKG/lib
	ln -sf ../usr/bin/cpp $PKG/lib/cpp
	ln -sf gcc $PKG/usr/bin/cc
	ln -sf g++ $PKG/usr/bin/c++

	# remove junk
	rm -r	$PKG/usr/share/info                        \
		$PKG/usr/share/gcc-$version                \
		$PKG/usr/bin/*-linux-gnu-*                 \
		$PKG/usr/lib/gcc/*/$version/install-tools  \
		$PKG/usr/lib/gcc/*/$version/include-fixed  \

	for d in lib lib32; do
		mkdir -p $PKG/usr/share/gdb/auto-load/usr/$d
		mv $PKG/usr/$d/libstdc++.so.*-gdb.py \
			$PKG/usr/share/gdb/auto-load/usr/$d
	done

	# add a compatibility symlink to enable building programs with
	# Link Time Optimization (LTO)
	mkdir -p $PKG/usr/lib/bfd-plugins
	ln -fsv ../../lib/gcc/$( $PKG/usr/bin/gcc -dumpmachine
		)/14.2.0/liblto_plugin.so $PKG/usr/lib/bfd-plugins/

	sed -i "s|-L$SRC[^ ]* ||g" \
		$PKG/usr/lib/libstdc++.la $PKG/usr/lib32/libstdc++.la \
		$PKG/usr/lib/libsupc++.la $PKG/usr/lib32/libsupc++.la
}
