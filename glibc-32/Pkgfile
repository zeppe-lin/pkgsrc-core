# Description: GNU C Library (32-bit)
# URL:         https://www.gnu.org/software/libc/

name=glibc-32
version=2.40-1
release=4

# Kernel version for headers
_kernelver=6.1.159

source="https://ftp.gnu.org/gnu/glibc/glibc-${version%-*}.tar.xz
	https://cdn.kernel.org/pub/linux/kernel/v6.x/linux-${_kernelver%.*}.tar.xz
	https://cdn.kernel.org/pub/linux/kernel/v6.x/patch-$_kernelver.xz
	../glibc/glibc-$version.patch
	../glibc/glibc-2.4x-fhs-1.patch
	lib32.conf"

build() {
	# 1. Install required kernel headers.
	# The 'make headers' followed by 'find/install' is used to avoid
	# external dependencies like rsync.
	cd linux-${_kernelver%.*}
	xzcat $SRC/patch-$_kernelver.xz | patch -sNp1 -F0
	make mrproper
	#make headers_check
	#make INSTALL_HDR_PATH=$PKG/usr headers_install
	#chown root:root $PKG/usr
	make headers
	find usr/include -name \*.h -type f | while read -r _hdr; do
		install -g root -o root -m 644 -D $_hdr $PKG/$_hdr
	done
	cd -

	# 2. Apply glibc specific patches.
	patch -d glibc-${version%-*} -Np1 -i $SRC/glibc-$version.patch
	patch -d glibc-${version%-*} -Np1 -i $SRC/glibc-2.4x-fhs-1.patch

	mkdir build; cd build

	# 3. Set cross-compilation environment variables.
	# The CC variable ensures the 32-bit target architecture is used.
	export CC="${CC:-gcc} -m32 -mstackrealign"
	export CFLAGS="$CFLAGS -Wno-error=parentheses"
	export libc_cv_slibdir=/lib32

	# 4. Configure, build and install glibc (32-bit).
	../glibc-${version%-*}/configure          \
		--prefix=/usr                     \
		--libdir=/usr/lib32               \
		--libexecdir=/usr/lib32           \
		--with-headers=$PKG/usr/include   \
		--disable-profile                 \
		--disable-werror                  \
		--enable-add-ons                  \
		--enable-bind-now                 \
		--enable-kernel=6.1               \
		--enable-multi-arch               \
		--enable-stack-protector=strong   \
		--without-gd                      \
		i686-pc-linux-gnu                 \
		MAKEINFO=missing                  \

	make V=1
	#make check
	make install_root=$PKG install

	# 5. Clean up unnecessary files (binaries, docs, etc).
	# The 32-bit package should only contain libraries and ld.so.
	rm -r $PKG/usr/bin/ $PKG/usr/sbin/ $PKG/usr/share/ \
		$PKG/etc/ $PKG/sbin/ $PKG/var/

	# 6. Correct the stubs-32.h header installation.
	# The main glibc package needs the primary headers; this package
	# only needs stubs.
	mv $PKG/usr/include/gnu/stubs-32.h $SRC/
	rm -r $PKG/usr/include
	install -D $SRC/stubs-32.h $PKG/usr/include/gnu/stubs-32.h

	# 7. Install 32-bit dynamic linker config and create symlink.
	# This enables the system to find the 32-bit shared objects.
	install -D $SRC/lib32.conf $PKG/etc/ld.so.conf.d/lib32.conf

	# Create /lib/ld-linux.so.2 symlink
	# (FHS compliant for 32-bit dynamic linker).
	mkdir -p $PKG/lib
	ln -s /lib32/ld-linux.so.2 $PKG/lib/ld-linux.so.2
}
