# Description: GNU C Library (32-bit)
# URL:         https://www.gnu.org/software/libc/

name=glibc-32
version=2.40
release=2

# Kernel is in the pkgsrc-system collection that may be disabled by user
# through pkgmk.conf configuration.  If it's available, use packages' already
# downloaded source, otherwise download the hardcoded one.
_kernelver=$(pkgman printf %v --filter=linux || echo 5.4.292)
source="https://ftp.gnu.org/gnu/glibc/glibc-${version%-*}.tar.xz

	https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-${_kernelver%.*}.tar.xz
	https://cdn.kernel.org/pub/linux/kernel/v5.x/patch-$_kernelver.xz

	../glibc/glibc-2.4x-fhs-1.patch
	lib32.conf"

build() {
	# Install kernel headers.
	# The headers require rsync for installation, which is redundant for
	# core collection (rsync is placed in pkgsrc-system).  The following
	# "find" command simply does the same.
	cd linux-${_kernelver%.*}
	xzcat $SRC/patch-$_kernelver.xz | patch -sNp1 -F0
	make mrproper
	#make headers_check
	#make INSTALL_HDR_PATH=$PKG/usr headers_install
	#chown root:root $PKG/usr
	make headers
	find usr/include -name \*.h -type f | while read -r _hdr; do
		install -g root -o root -m 644 -D $_hdr $PKG/$_hdr
	done
	cd -

	patch -d glibc-${version%-*} -Np1 -i $SRC/glibc-2.4x-fhs-1.patch

	mkdir build; cd build

	export libc_cv_slibdir=/lib32
	export CC="${CC:-gcc} -m32 -mstackrealign"
	export CFLAGS="$CFLAGS -Wno-error=parentheses"

	../glibc-${version%-*}/configure          \
		--prefix=/usr                     \
		--libdir=/usr/lib32               \
		--libexecdir=/usr/lib32           \
		--with-headers=$PKG/usr/include   \
		--disable-profile                 \
		--disable-werror                  \
		--enable-add-ons                  \
		--enable-bind-now                 \
		--enable-kernel=4.9               \
		--enable-multi-arch               \
		--enable-stack-protector=strong   \
		--without-gd                      \
		i686-pc-linux-gnu                 \
		MAKEINFO=missing                  \

	make V=1
	#make check
	make install_root=$PKG install

	rm -r $PKG/usr/bin/ $PKG/usr/sbin/ $PKG/usr/share/ \
		$PKG/etc/ $PKG/sbin/ $PKG/var/

	mv $PKG/usr/include/gnu/stubs-32.h $SRC/
	rm -r $PKG/usr/include
	install -D $SRC/stubs-32.h $PKG/usr/include/gnu/stubs-32.h

	install -D $SRC/lib32.conf $PKG/etc/ld.so.conf.d/lib32.conf

	mkdir -p $PKG/lib
	ln -s /lib32/ld-linux.so.2 $PKG/lib/ld-linux.so.2
}
