# Description: GNU C Library
# URL:         https://www.gnu.org/software/libc/

name=glibc
version=2.40-1
release=3

# Kernel version for headers
_kernelver=6.1.155

source="https://ftp.gnu.org/gnu/glibc/glibc-${version%-*}.tar.xz
	https://cdn.kernel.org/pub/linux/kernel/v6.x/linux-${_kernelver%.*}.tar.xz
	https://www.kernel.org/pub/linux/kernel/v6.x/patch-$_kernelver.xz
	glibc-$version.patch
	glibc-2.4x-fhs-1.patch
	hosts resolv.conf nsswitch.conf host.conf ld.so.conf"

build() {
	# 1. Install required kernel headers.
	# The 'make headers' followed by 'find/install' is used to avoid
	# external dependencies like rsync.
	cd linux-${_kernelver%.*}
	xzcat $SRC/patch-$_kernelver.xz | patch -sNp1 -F0
	make mrproper
	#make headers_check
	#make INSTALL_HDR_PATH=$PKG/usr headers_install
	#chown root:root $PKG/usr
	make headers
	find usr/include -name \*.h -type f | while read -r _hdr; do
		install -g root -o root -m 0644 -D $_hdr $PKG/$_hdr
	done
	cd -

	# 2. Apply glibc specific patches.
	for p in glibc-$version.patch glibc-2.4x-fhs-1.patch; do
		patch -d glibc-${version%-*} -Np1 -i $SRC/${p}
	done

	# 3. Configure, build and install glibc.
	mkdir build; cd build

	export libc_cv_slibdir=/lib

	../glibc-${version%-*}/configure         \
		--prefix=/usr                    \
		--libdir=/usr/lib                \
		--libexecdir=/usr/lib            \
		--with-headers=$PKG/usr/include  \
		--disable-profile                \
		--disable-werror                 \
		--enable-add-ons                 \
		--enable-bind-now                \
		--enable-kernel=6.1              \
		--enable-multi-arch              \
		--enable-stack-protector=strong  \
		--without-gd                     \
		MAKEINFO=missing                 \

	make V=1
	#make check
	make install_root=$PKG install

	# 4. Install configuration files.
	install -m 0644 -Dt $PKG/etc/                    \
		$SRC/glibc-${version%-*}/nscd/nscd.conf  \
		$SRC/hosts                               \
		$SRC/resolv.conf                         \
		$SRC/nsswitch.conf                       \
		$SRC/host.conf                           \
		$SRC/ld.so.conf                          \

	# 5. Create directories and cache files.
	mkdir -p $PKG/var/db/nscd $PKG/etc/ld.so.conf.d
	touch $PKG/etc/ld.so.cache

	# 6. Set localtime to UTC by default.
	ln -sf ../usr/share/zoneinfo/UTC $PKG/etc/localtime

	# 7. Install required locales (C.UTF-8).
	mkdir -p $PKG/usr/lib/locale
	LC_ALL=C ./elf/ld.so --library-path . \
	$PKG/usr/bin/localedef -c --quiet \
	-i $SRC/glibc-${version%-*}/localedata/locales/C \
	-f $SRC/glibc-${version%-*}/localedata/charmaps/UTF-8 \
	$PKG/usr/lib/locale/C.UTF-8 || echo "localedef failed (non-fatal)"

	# 8. Clean up junk files and obsoletes.
	rm -rf $PKG/usr/share/locale $PKG/usr/share/info
	rm $PKG/usr/bin/tzselect $PKG/usr/bin/zdump $PKG/usr/sbin/zic
	find $PKG -type f \( -name \*install.cmd -o -name ".\install" \) -delete
}
