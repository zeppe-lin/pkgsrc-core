# Description: GNU C Library
# URL:         https://www.gnu.org/software/libc/

name=glibc
version=2.40-1
release=1

# Kernel is in the pkgsrc-system collection that may be disabled by user
# through pkgman.conf configuration.  If it is available, use packages' already
# downloaded source, otherwise download the hardcoded one.
_kernelver=$(pkgman printf %v --filter=linux || echo 5.4.295)
source="https://ftp.gnu.org/gnu/glibc/glibc-${version%-*}.tar.xz

	https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-${_kernelver%.*}.tar.xz
	https://www.kernel.org/pub/linux/kernel/v5.x/patch-$_kernelver.xz

	glibc-$version.patch
	glibc-2.4x-fhs-1.patch
	hosts resolv.conf nsswitch.conf host.conf ld.so.conf"

build() {
	# Install kernel headers.
	# The headers require rsync for installation, which is redundant for
	# core collection (rsync is placed in pkgsrc-system).  The following
	# "find" command simply does the same.
	cd linux-${_kernelver%.*}
	xzcat $SRC/patch-$_kernelver.xz | patch -sNp1 -F0
	make mrproper
	#make headers_check
	#make INSTALL_HDR_PATH=$PKG/usr headers_install
	#chown root:root $PKG/usr
	make headers
	find usr/include -name \*.h -type f | while read -r _hdr; do
		install -g root -o root -m 0644 -D $_hdr $PKG/$_hdr
	done
	cd -

	patch -d glibc-${version%-*} -Np1 -i $SRC/glibc-$version.patch
	patch -d glibc-${version%-*} -Np1 -i $SRC/glibc-2.4x-fhs-1.patch

	mkdir build; cd build

	export libc_cv_slibdir=/lib

	../glibc-${version%-*}/configure         \
		--prefix=/usr                    \
		--libdir=/usr/lib                \
		--libexecdir=/usr/lib            \
		--with-headers=$PKG/usr/include  \
		--disable-profile                \
		--disable-werror                 \
		--enable-add-ons                 \
		--enable-bind-now                \
		--enable-kernel=4.9              \
		--enable-multi-arch              \
		--enable-stack-protector=strong  \
		--without-gd                     \
		MAKEINFO=missing                 \

	make V=1
	#make check
	make install_root=$PKG install

	install -m 0644 -Dt $PKG/etc/                    \
		$SRC/glibc-${version%-*}/nscd/nscd.conf  \
		$SRC/hosts                               \
		$SRC/resolv.conf                         \
		$SRC/nsswitch.conf                       \
		$SRC/host.conf                           \
		$SRC/ld.so.conf                          \

	mkdir -p $PKG/var/db/nscd

	ln -sf ../usr/share/zoneinfo/UTC $PKG/etc/localtime

	mkdir -p $PKG/etc/ld.so.conf.d
	touch $PKG/etc/ld.so.cache

	# install required locales
	mkdir -p $PKG/usr/lib/locale
	LC_ALL=C ./elf/ld.so --library-path . $PKG/usr/bin/localedef   \
	  --force --quiet                                              \
	  --inputfile=$SRC/glibc-${version%-*}/localedata/locales/C    \
	  --charmap=$SRC/glibc-${version%-*}/localedata/charmaps/UTF-8 \
	  $PKG/usr/lib/locale/C.UTF-8 || true

	# remove junk and obsoletes
	rm -rf $PKG/usr/share/locale $PKG/usr/share/info
	rm $PKG/usr/bin/tzselect $PKG/usr/bin/zdump $PKG/usr/sbin/zic
	find $PKG  -type f \(           \
		   -name \*install.cmd  \
		-o -name ".\install"    \
		\) -delete
}
