# Description: Utility to access IDE device parameters
# URL:         https://sourceforge.net/projects/hdparm/

name=hdparm
version=9.65
release=1
source=https://downloads.sourceforge.net/project/$name/$name/$name-$version.tar.gz

build() {
	cd $name-$version

	# 1. remove default optimization flag
	# 2. don't strip, pkgmk will do it
	sed -e "/^CFLAGS :=/s/-O2//g"    \
	    -e "/^STRIP/s/strip/true/g"  \
	    -i Makefile

	make V=1
	make DESTDIR=$PKG install
}
