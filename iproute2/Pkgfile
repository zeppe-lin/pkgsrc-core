# Description: IP Routing Utilities
# URL:         https://wiki.linuxfoundation.org/networking/iproute2
# Depends on:  db elfutils iptables libcap libtirpc

name=iproute2
version=6.13.0
release=1
source="https://www.kernel.org/pub/linux/utils/net/$name/$name-$version.tar.xz
	rc.lo
	rc.net
	rc.bridge"

build() {
	cd $name-$version

	# configure uses TMPDIR during tests
	export TMPDIR=$PKGMK_WORK_DIR

	./configure

	make CCOPTS="$CFLAGS" V=1
	make DESTDIR=$PKG install

	# services
	install -m 0755 -D $SRC/rc.lo     $PKG/etc/rc.d/lo
	install -m 0755 -D $SRC/rc.net    $PKG/etc/rc.d/net
	install -m 0755 -D $SRC/rc.bridge $PKG/etc/rc.d/bridge

	# add ip to user path via symlink
	mkdir -p $PKG/bin
	ln -s /sbin/ip $PKG/bin/ip
}
