# Description: Library to create and read several archive formats
# URL:         http://www.libarchive.org/
# Depends on:  acl bzip2 expat openssl zstd

name=libarchive
version=3.6.2
release=2
source=https://github.com/$name/$name/releases/download/v$version/$name-$version.tar.xz

build() {
	export CFLAGS="$CFLAGS -DHAVE_LZMA_STREAM_ENCODER_MT=1"

	# XML support is only needed for the xar format which we
	# can live without.
	cmake -S $name-$version -B build -G Ninja   \
		-D CMAKE_INSTALL_PREFIX=/usr        \
		-D CMAKE_BUILD_TYPE=Release         \
		-D CMAKE_C_FLAGS_RELEASE="$CFLAGS"  \
		-D ENABLE_TAR_SHARED=ON             \
		-D ENABLE_LIBB2=OFF                 \
		-D ENABLE_LIBXML2=OFF               \
		-D ENABLE_NETTLE=OFF                \
		-Wno-dev                            \

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install
}
