# Description: Netlink API for in-kernel nf_tables subsystem
# URL:         https://netfilter.org/projects/libnftnl
# Depends on:  libmnl

# NOTE: v1.3.0+ requires linux v6.16+

name=libnftnl
version=1.3.1
release=1
source=https://www.netfilter.org/pub/$name/$name-$version.tar.xz

build() {
	mkdir build; cd build

	../$name-$version/configure \
		--prefix=/usr \

	make V=1
	make DESTDIR=$PKG install

	# Remove junk
	rm $PKG/usr/lib/*.la
}
