# Description: Pluggable Authentication Modules (PAM) for Linux
# URL:         https://github.com/linux-pam/linux-pam
# Depends on:  bash libxcrypt

name=linux-pam
version=1.6.1
release=2
source="https://github.com/$name/$name/releases/download/v${version}/Linux-PAM-$version.tar.xz
	pam.common-account
	pam.common-auth
	pam.common-password
	pam.common-session
	pam.other"

build() {
	mkdir build; cd build

	CONFIG_SHELL=/bin/bash           \
	../Linux-PAM-$version/configure  \
		--prefix=/usr            \
		--libdir=/lib            \
		--disable-nis            \
		--disable-nls            \
		--disable-prelude        \
		--enable-db=no           \
		--enable-lastlog         \

	make V=1
	make DESTDIR=$PKG install

	mv $PKG/lib/pkgconfig $PKG/usr/lib/

	# unix_chkpwd needs to be setuid root
	chmod u+s $PKG/sbin/unix_chkpwd

	# pam
	mkdir -p $PKG/etc/pam.d
	for f in common-account common-auth common-password common-session other
	do
		install -o root -g root -m 0644 $SRC/pam.$f $PKG/etc/pam.d/$f
	done

	# remove junk
	rm -r $PKG/usr/lib/systemd $PKG/usr/share/doc
}
