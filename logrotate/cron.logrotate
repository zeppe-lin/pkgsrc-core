#!/bin/sh
#
# /etc/cron/daily/logrotate: rotate system logs
#

# Wrapped with ionice(3)/nice(19) for low I/O/CPU priority
ionice -c3 nice -n 19 /usr/sbin/logrotate /etc/logrotate.conf
rc=$?

# Log abnormal exit
if [ "$rc" -ne 0 ]; then
	/usr/bin/logger -t logrotate "ALERT exited abnormally with [$rc]"
fi

# Keep cron quiet; errors are reported via logger
exit 0

# End of file.
