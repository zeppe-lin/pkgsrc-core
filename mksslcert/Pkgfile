# Description: Creates self‚Äêsigned openssl certificate
# URL:         https://github.com/zeppe-lin
# Depends on:  scdoc

name=mksslcert
version=0.1.2
release=2
source="mksslcert.sh mksslcert.1.scdoc"

build() {
	install -m 0755 -D $SRC/mksslcert.sh $PKG/usr/bin/mksslcert

	mkdir -p $PKG/usr/share/man/man1
	scdoc < $SRC/mksslcert.1.scdoc > $PKG/usr/share/man/man1/mksslcert.1
}
