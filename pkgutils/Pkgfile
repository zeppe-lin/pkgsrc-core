# Description: Set of utilities to manage software packages
# URL:         https://github.com/zeppe-lin/pkgutils
# Depends on:  libarchive

name=pkgutils
version=6.0.1-cd6dddf
release=1
source="https://github.com/zeppe-lin/$name/archive/${version#*-}/$name-$version.tar.gz
	pkgadd.conf"

build() {
	# pick up system flags
	sed -ri '/^(CXX|LD)FLAGS/s/ = /+=/g' $name-*/config.mk

	make -C $name-* DESTDIR=$PKG install install_bashcomp

	# config
	install -m 0644 -Dt $PKG/etc/ $SRC/pkgadd.conf

	# vim syntax highlight
	mkdir -p $PKG/usr/share/vim/vimfiles
	cp -r $name-*/vim-pkgaddconf/* $PKG/usr/share/vim/vimfiles/
}
