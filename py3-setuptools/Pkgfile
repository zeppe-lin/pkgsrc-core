# Description: Installing and managing Python packages
# URL:         https://pypi.org/project/setuptools/
# Depends on:  py3-flit-core py3-gpep517

name=py3-setuptools
version=75.1.0
release=1
source=https://files.pythonhosted.org/packages/source/s/setuptools/setuptools-$version.tar.gz

build() {
	cd setuptools-$version

	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	/usr/bin/python3 -m installer -d $PKG .dist/*.whl

	/usr/bin/python3     -m compileall $PKG
	/usr/bin/python3 -O  -m compileall $PKG
	/usr/bin/python3 -OO -m compileall $PKG
}
