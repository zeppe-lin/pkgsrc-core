# Description: Check for missing or wrong libraries of installed packages
# URL:         https://github.com/zeppe-lin/revdep
# Depends on:  elfutils scdoc

name=revdep
version=4.2-f25f7ee
release=1
source=https://github.com/zeppe-lin/$name/archive/${version#*-}/$name-$version.tar.gz

build() {
	# Pick up system flags
	sed -ri '/^(CXX|LD)FLAGS/s/ = /+=/g' $name-*/config.mk

	# It's safe to optimize
	CXXFLAGS="`echo $CXXFLAGS | sed 's/-O. /-Ofast /'`"

	make -C $name-* \
		LDFLAGS="-static `pkg-config --static --libs libelf`" \
		DESTDIR=$PKG install
}
