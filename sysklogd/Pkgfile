# Description: Kernel and system logging daemons
# URL:         https://github.com/troglobit/sysklogd

name=sysklogd
version=2.7.1
release=1
source="https://github.com/troglobit/$name/releases/download/v$version/$name-$version.tar.gz
	syslogd.8.patch
	cron.syslog
	rc.sysklogd
	rotatelog.8
	rotatelog.sh
	syslog.conf"

build() {
	for f in $SRC/*.patch; do
		patch -d $name-$version -Np1 -i $f
	done
	
	mkdir build; cd build

	# --without-logger:
	# The logger(1) utility is provided by the util-linux package;
	# if you're using suckless sbase, it also ships the logger(1) utility.
	../$name-$version/configure   \
		--prefix=/usr         \
		--sysconfdir=/etc     \
		--localstatedir=/var  \
		--runstatedir=/run    \
		--without-logger      \

	make V=1
	make DESTDIR=$PKG install

	# logrotate helper
	install -m 0755 -D $SRC/rotatelog.sh $PKG/usr/sbin/rotatelog
	install -m 0644 -Dt $PKG/usr/share/man/man8 $SRC/rotatelog.8

	install -m 0755 -D $SRC/cron.syslog $PKG/etc/cron/weekly/syslog
	install -m 0755 -D $SRC/rc.sysklogd $PKG/etc/rc.d/sysklogd
	install -m 0644 -D $SRC/syslog.conf $PKG/etc/syslog.conf

	mkdir -p $PKG/var/log $PKG/etc/syslog.d

	for f in auth cron debug kernel mail messages; do
		touch      $PKG/var/log/$f
		chmod 0640 $PKG/var/log/$f
	done

	# remove junk
	rm -r $PKG/usr/share/doc
}
