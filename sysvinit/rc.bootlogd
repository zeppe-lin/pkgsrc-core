#!/bin/sh
#
# /etc/rc.d/bootlogd: start/stop bootlogd(8) daemon
#

SSD=/sbin/start-stop-daemon
PROG=/sbin/bootlogd
PID=/run/bootlogd.pid
OPTS="-c -s -p $PID"

case $1 in
start)
	$SSD --start --oknodo --exec $PROG -- $OPTS
	;;
stop)
	$SSD --stop --retry 10 --remove-pidfile --pidfile $PID
	;;
restart)
	$0 stop
	$0 start
	;;
status)
	$SSD --status --verbose --pidfile $PID --exec $PROG
	;;
*)
	echo "Usage: $0 {start|stop|restart|status}"
	;;
esac

# End of file.
