# Description: Network utility for downloading content from the Web
# URL:         https://www.gnu.org/software/wget/
# Depends on:  libpcre2 libunistring openssl zlib

name=wget
version=1.25.0
release=1
source="https://ftp.gnu.org/gnu/wget/wget-$version.tar.lz
        wgetrc"

build() {
	export PYTHON=/usr/bin/python3

	mkdir build; cd build

	# --disable-iri:     disable IDN/IRIs support (non-core dep)
	# --without-cares:   disable support for C-Ares DNS lookup (non-core dep)
	# --without-libpsl:  disable support for libpsl cookie checking (non-core dep)
	# --without-libuuid: don't generate UUIDs for WARC files (util-linux' libuuid)
	../wget-$version/configure  \
		--prefix=/usr       \
		--sysconfdir=/etc   \
		--disable-debug     \
		--disable-iri       \
		--disable-pcre      \
		--disable-nls       \
		--with-ssl=openssl  \
		--without-cares     \
		--without-libpsl    \
		--without-libuuid   \

	make V=1
	make DESTDIR=$PKG install 

	# fix the config file reference on the manual page
	sed -i 's|/usr/local/etc/wgetrc|/etc/wgetrc|g' \
		$PKG/usr/share/man/man1/wget.1

	# config file
	install -m 0644 -Dt $PKG/etc $SRC/wgetrc

	# remove junk
	rm -r $PKG/usr/share/info
}
